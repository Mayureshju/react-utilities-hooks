{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["react"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
